<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('head')%>
    <title><%=title%></title>
</head>
<body>
    <%-include('header')%>
    <% if(user && user.id) { %>
        <div class="afterLogin">
            HI! <%= user.nick %>
        </div>
    <%}else {%>
        <div class="beforeLogin">
            <form method="POST" action='/auth/login' class='form'>
                <div class='formTitle'>Login</div>
                <div class='formItem'><input name='email' type='email' placeholder="email" required autofocus class='input'/></div>
                <div class='formItem'><input name='password' type='password' placeholder="password" required class='input'/></div>
                <% if(loginError) { %>
                    <div class='warning'>
                        <%= loginError %>
                    </div>
                <% } %>
                <div class='formItem'><input type='submit' value='submit' class='submitBtn'/></div>
            </form>
        </div>
    <%}%>
</body>
</html>